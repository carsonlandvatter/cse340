<h1><%= title %></h1>
<%- messages() %>
    <% if (typeof errors != 'undefined' && errors.length > 0) { %>
        <ul class="notice">
            <% errors.forEach(error => { %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } %>
<form action="/inv/add-classification" method="post" id="addClassificationForm">
        <p>Name must be alphabetic characters only.</p>
        <input type="text" id="classification_name" name="classification_name" required pattern="^[A-Za-z]+$" value="<%= locals.classification_name %>">
        <button type="submit">Add Classification</button>
</form>