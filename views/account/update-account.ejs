<h1><%- title %></h1>
<%- messages() %>
<% if (errors && errors.length > 0) { %>
    <ul class="notice">
   <% errors.forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>
<form action="/account/update-info" method="post">
    <h2>Account Update</h2>
    <label for="account_firstname">First name</label>
    <input type="text" name="account_firstname" id="account_firstname" required value="<%= locals.account_firstname || accountData.account_firstname %>">
    <label for="account_lastname">Last name</label>
    <input type="text" name="account_lastname" id="account_lastname" required value="<%= locals.account_lastname || accountData.account_lastname %>">
    <label for="account_email">Email Address</label>
    <input type="email" name="account_email" id="account_email" required value="<%= locals.account_email || accountData.account_email %>" placeholder="Enter a valid email">
    <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
    <button type="submit">Update</button>
</form>
<form action="/account/update-password" method="post">
    <h2>Change Password</h2>
    <p>*note your original password will be changed</p>
    <label for="account_password">Password</label>
    <input type="password" name="account_password" id="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    <p>Password must be 12 characters minimum, countain at least 1 capital letter, number, and special character</p>
    <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
    <button type="submit">Change Password</button>
</form>